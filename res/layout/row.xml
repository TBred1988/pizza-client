<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

    <TextView android:layout_width="match_parent"
              android:layout_height="@dimen/order_page_items_row_height"
              android:id="@+id/textOfItems"
              android:layout_gravity="center_vertical"
              android:layout_margin="@dimen/order_page_items_name_margin"
              android:textSize="@dimen/order_page_items_font_size"
              >
    </TextView>
    <TextView android:layout_width="match_parent"
              android:layout_height="@dimen/order_page_items_row_height"
              android:id="@+id/priceOfItems"
              android:layout_gravity="center_vertical"
              android:layout_margin="@dimen/order_page_items_price_margin"
              android:textSize="@dimen/order_page_items_font_size"
            >
    </TextView>
    <Button
            android:id="@+id/buttonItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_page_items_row_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:padding="1dp"
            android:text="@string/hu_order_button_label"
            android:textStyle="bold"
            android:textSize="@dimen/order_page_items_font_size"/>
</LinearLayout>