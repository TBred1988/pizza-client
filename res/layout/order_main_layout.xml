<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/mainGridView"
          android:columnCount="2"
          android:verticalSpacing="10dp"
          android:horizontalSpacing="10dp"
          android:stretchMode="columnWidth"
          android:gravity="center"
          android:background="@color/brown"
          tools:context=".OrderMain">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView
                android:layout_width="@dimen/order_page_login_label_width"
                android:layout_height="@dimen/order_page_login_label_height"
                android:id="@+id/loginNameText"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="@dimen/order_page_login_font_size"
                android:textColor="@color/white"
                />
        <Button
                android:layout_width="@dimen/order_page_logout_label_width"
                android:layout_height="@dimen/order_page_logout_label_height"
                android:textSize="@dimen/order_page_logout_font_size"
                android:text="@string/hu_button_logout_label"
                android:textColor="@color/white"
                android:layout_column="1"
                android:layout_row="0"
                android:id="@+id/buttonLogout"/>
    </LinearLayout>

    <ListView android:id="@+id/items"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_column="0"
              android:textSize="@dimen/order_page_items_font_size"
              android:background="@color/cinnamon"
              android:textColor="@color/white"
              android:layout_row="1">
    </ListView>

</GridLayout>